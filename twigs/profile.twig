{% extends "main.twig" %}
{% block id %}support{% endblock %}
{% block content %}
    <div id="header">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <h2>
                        <span class="fa fa-tasks"></span>
                        Your profile
                    </h2>
                    <p>
                        Keep your profile up to date to find better matches quicker.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div id="browse">
        <div class="container">
            <form class="form-horizontal" role="form" method="post">
                <div class="form-group">
                    <label for="gender" class="col-sm-2 control-label">Gender</label>
                    <div class="col-sm-10">
                        <label class="radio-inline">
                            <input type="radio" id="gender" name="profile[gender]" value="Male"{% if profile.gender == M %} checked{% endif %}> Male
                        </label>
                        <label class="radio-inline">
                            <input type="radio" id="gender" name="profile[gender]" value="Female"{% if profile.gender == F %} checked{% endif %}> Female
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="liner" class="col-sm-2 control-label">One-liner</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="liner" name="profile[liner]" value="{{ profile.liner }}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="bio" class="col-sm-2 control-label">Bio</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="3" name="profile[bio]">{{ profile.bio }}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="age" class="col-sm-2 control-label">Age</label>
                    <div class="col-sm-10">
                        <input type="age" class="form-control" id="age" name="profile[age]" value="{{ profile.age }}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="photo" class="col-sm-2 control-label">Photo</label>
                    <div class="col-sm-10">
                        <input type="photo" class="form-control" id="photo" name="photo_upload">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="profile[email]" value="{{ profile.email }}">
                    </div>
                </div>
                <div class="well">
                    <div class="form-group">
                        <label for="inputPassword2" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="inputPassword3" name="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Password (again)</label>
                        <div class="col-sm-10">
                            <input type="password2" class="form-control" id="inputPassword2" name="password2">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}